<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/background_color"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sandeep_pc.alphabite.MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Alphabite"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/random_word"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33dp"
        android:text="Type The Above Word"
        android:maxLength="20"
        android:textColor="#000000"
        android:id="@+id/type_word"
        android:layout_below="@+id/random_word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33dp"
        android:text="Timer"
        android:id="@+id/timer"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/type_word"
        android:layout_alignParentStart="true"
        android:textColor="#ff0000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_below="@+id/timer"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/adView">

        <TableLayout
            android:layout_width="348dp"
            android:layout_height="231dp"
            android:layout_below="@+id/random_word"
            android:layout_marginTop="196dp"
            android:id="@+id/table"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l1"
                    android:onClick="onPressL1" />
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l2"
                    android:onClick="onPressL2"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l3"
                    android:onClick="onPressL3"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l4"
                    android:onClick="onPressL4"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l5"
                    android:onClick="onPressL5"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l6"
                    android:onClick="onPressL6"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l7"
                    android:onClick="onPressL7"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l8"
                    android:onClick="onPressL8"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l9"
                    android:onClick="onPressL9"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l10"
                    android:onClick="onPressL10"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l11"
                    android:onClick="onPressL11"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l12"
                    android:onClick="onPressL12"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l13"
                    android:onClick="onPressL13"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l14"
                    android:onClick="onPressL14" />
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l15"
                    android:onClick="onPressL15"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l16"
                    android:onClick="onPressL16"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l17"
                    android:onClick="onPressL17"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l18"
                    android:onClick="onPressL18"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l19"
                    android:onClick="onPressL19"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l20"
                    android:onClick="onPressL20"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l21"
                    android:onClick="onPressL21"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l22"
                    android:onClick="onPressL22"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l23"
                    android:onClick="onPressL23"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:id="@+id/l24"
                    android:onClick="onPressL24"/>
            </TableRow>
            <TableRow android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/l26"
                    android:layout_column="0"
                    android:onClick="onPressL26"/>

                <TextView
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/l25"
                    android:layout_column="2"
                    android:onClick="onPressL25"/>
            </TableRow>
            <TableRow android:gravity="center">
                <TextView
                    android:textSize="30dp"
                    android:text="&lt;"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/del"
                    android:layout_column="0"
                    android:onClick="delete_letter"/>
                <TextView
                    android:textSize="30dp"
                    android:text="&gt;"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/enter"
                    android:layout_column="5"
                    android:onClick="enter_word"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music : OFF"
        android:id="@+id/music"
        android:background="#000000"
        android:textColor="#ffffff"
        android:onClick="musicOnAndOff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/timer"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/play_again" />

    <TextView
        android:layout_width="362dp"
        android:layout_height="180dp"
        android:textSize="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Score"
        android:id="@+id/score_view"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#000000"
        android:id="@+id/play_again"
        android:onClick="playAgain"
        android:gravity="center"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/score_view"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/linearLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_above="@+id/play_again"
        android:id="@+id/startButton"
        android:layout_alignEnd="@+id/score_view"
        android:layout_alignParentStart="true"
        android:onClick="startButtonPress" />

</RelativeLayout>
